<?xml version="1.0" encoding="utf-8"?>
<com.kuangjia.main.ui.widget.CustomerScrollView xmlns:android="http://schemas.android.com/apk/res/android"
                                                xmlns:tools="http://schemas.android.com/tools"
                                                xmlns:fresco="http://schemas.android.com/apk/res-auto"
                                                android:layout_width="match_parent"
                                                android:layout_height="match_parent" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <View android:layout_width="match_parent" android:layout_height="0.5dp" android:background="@color/colorAccent"/>
        <HorizontalScrollView
            android:layout_width="match_parent"
            android:layout_height="100dp"
            android:scrollbars="none">
                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="100dp"
                    android:orientation="horizontal"
                    android:padding="5dp">
                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/simpleImage1"
                        android:layout_width="80dip"
                        android:layout_height="80dip"
                        fresco:placeholderImage="@drawable/click_refresh"
                        fresco:placeholderImageScaleType="centerCrop"
                        fresco:roundAsCircle="true"
                        fresco:failureImage="@drawable/icon_loadedfail"
                        fresco:failureImageScaleType="centerCrop"
                        fresco:progressBarImage="@drawable/icon_loading"/>

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/simpleImage2"
                        android:layout_width="80dip"
                        android:layout_height="80dip"
                        fresco:placeholderImage="@drawable/click_refresh"
                        fresco:placeholderImageScaleType="centerCrop"
                        fresco:roundAsCircle="true"/>

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/simpleImage3"
                        android:layout_width="80dip"
                        android:layout_height="80dip"
                        fresco:placeholderImage="@drawable/click_refresh"
                        fresco:placeholderImageScaleType="centerCrop"
                        fresco:roundAsCircle="true"/>
                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/simpleImage4"
                        android:layout_width="80dip"
                        android:layout_height="80dip"
                        fresco:placeholderImage="@drawable/click_refresh"
                        fresco:placeholderImageScaleType="centerCrop"
                        fresco:roundAsCircle="true"/>
                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/simpleImage5"
                        android:layout_width="80dip"
                        android:layout_height="80dip"
                        fresco:placeholderImage="@drawable/click_refresh"
                        fresco:placeholderImageScaleType="centerCrop"
                        fresco:roundAsCircle="true"/>

                    <com.facebook.drawee.view.SimpleDraweeView
                        android:id="@+id/simpleImage6"
                        android:layout_width="80dip"
                        android:layout_height="80dip"
                        fresco:placeholderImage="@drawable/click_refresh"
                        fresco:placeholderImageScaleType="centerCrop"
                        fresco:roundAsCircle="true"/>
                </LinearLayout>

        </HorizontalScrollView>


        <View android:layout_width="match_parent" android:layout_height="0.5dp" android:background="@color/colorAccent"/>
        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="200dp">
            <RelativeLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"  >
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/simpleImage12"
                    android:layout_width="100dp"
                    android:layout_height="100dip"
                    android:layout_marginLeft="50dp"
                    fresco:roundAsCircle="true"
                    fresco:placeholderImage="@drawable/click_refresh"
                    fresco:placeholderImageScaleType="centerCrop"
                    fresco:failureImage="@drawable/icon_loadedfail"
                    fresco:failureImageScaleType="centerCrop"
                    fresco:progressBarImage="@drawable/icon_loading"
                    fresco:progressBarImageScaleType="centerCrop" />
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/simpleImage13"
                    android:layout_alignParentRight="true"
                    android:layout_width="100dp"
                    android:layout_height="100dip"
                    android:layout_marginRight="50dp"
                    fresco:roundAsCircle="true"
                    fresco:placeholderImage="@drawable/click_refresh"
                    fresco:placeholderImageScaleType="centerCrop"
                    fresco:failureImage="@drawable/icon_loadedfail"
                    fresco:failureImageScaleType="centerCrop"
                    fresco:progressBarImage="@drawable/icon_loading"
                    fresco:progressBarImageScaleType="centerCrop" />
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/simpleImage14"
                    android:layout_below="@+id/simpleImage13"
                    android:layout_width="100dp"
                    android:layout_height="100dip"
                    android:layout_marginLeft="50dp"
                    fresco:roundAsCircle="true"
                    fresco:placeholderImage="@drawable/click_refresh"
                    fresco:placeholderImageScaleType="centerCrop"
                    fresco:failureImage="@drawable/icon_loadedfail"
                    fresco:failureImageScaleType="centerCrop"
                    fresco:progressBarImage="@drawable/icon_loading"
                    fresco:progressBarImageScaleType="centerCrop" />
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/simpleImage15"
                    android:layout_below="@+id/simpleImage13"
                    android:layout_alignParentRight="true"
                    android:layout_width="100dp"
                    android:layout_height="100dip"
                    android:layout_marginRight="50dp"
                    fresco:roundAsCircle="true"
                    fresco:placeholderImage="@drawable/click_refresh"
                    fresco:placeholderImageScaleType="centerCrop"
                    fresco:failureImage="@drawable/icon_loadedfail"
                    fresco:failureImageScaleType="centerCrop"
                    fresco:progressBarImage="@drawable/icon_loading"
                    fresco:progressBarImageScaleType="centerCrop" />
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/simpleImage141"
                    android:layout_below="@+id/simpleImage14"
                    android:layout_width="100dp"
                    android:layout_height="100dip"
                    android:layout_marginLeft="50dp"
                    fresco:roundAsCircle="true"
                    fresco:placeholderImage="@drawable/click_refresh"
                    fresco:placeholderImageScaleType="centerCrop"
                    fresco:failureImage="@drawable/icon_loadedfail"
                    fresco:failureImageScaleType="centerCrop"
                    fresco:progressBarImage="@drawable/icon_loading"
                    fresco:progressBarImageScaleType="centerCrop" />
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/simpleImage151"
                    android:layout_below="@+id/simpleImage15"
                    android:layout_alignParentRight="true"
                    android:layout_width="100dp"
                    android:layout_height="100dip"
                    android:layout_marginRight="50dp"
                    fresco:roundAsCircle="true"
                    fresco:placeholderImage="@drawable/click_refresh"
                    fresco:placeholderImageScaleType="centerCrop"
                    fresco:failureImage="@drawable/icon_loadedfail"
                    fresco:failureImageScaleType="centerCrop"
                    fresco:progressBarImage="@drawable/icon_loading"
                    fresco:progressBarImageScaleType="centerCrop" />
            </RelativeLayout>
        </android.support.v4.widget.NestedScrollView>

        <View android:layout_width="match_parent" android:layout_height="0.5dp" android:background="@color/colorAccent"/>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">
            <com.loopj.android.image.SmartImageView
                android:id="@+id/image1"
                android:layout_width="match_parent"
                android:layout_height="203dp"
                android:scaleType="fitXY"/>

            <com.loopj.android.image.SmartImageView
                android:id="@+id/image2"
                android:layout_width="match_parent"
                android:layout_height="203dp"
                android:scaleType="fitXY"/>
            <com.loopj.android.image.SmartImageView
                android:id="@+id/image3"
                android:layout_width="match_parent"
                android:layout_height="203dp"
                android:scaleType="fitXY"/>
            <com.loopj.android.image.SmartImageView
                android:id="@+id/image4"
                android:layout_width="match_parent"
                android:layout_height="203dp"
                android:scaleType="fitXY"/>
            <com.loopj.android.image.SmartImageView
                android:id="@+id/image5"
                android:layout_width="match_parent"
                android:layout_height="203dp"
                android:scaleType="fitXY"/>
        </LinearLayout>

        <View android:layout_width="match_parent" android:layout_height="0.5dp" android:background="@color/colorAccent"/>
        <android.support.v4.widget.NestedScrollView
            android:layout_width="match_parent"
            android:layout_height="400dp" >
            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:orientation="vertical">
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/simpleImage16"
                    android:layout_width="match_parent"
                    android:layout_height="200dip"
                    fresco:placeholderImage="@drawable/click_refresh"
                    fresco:placeholderImageScaleType="centerCrop"
                    fresco:roundAsCircle="false"
                    fresco:failureImage="@drawable/icon_loadedfail"
                    fresco:failureImageScaleType="centerCrop"
                    fresco:progressBarImage="@drawable/icon_loading"
                    fresco:progressBarImageScaleType="centerCrop" />
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/simpleImage17"
                    android:layout_width="match_parent"
                    android:layout_height="200dip"
                    fresco:placeholderImage="@drawable/click_refresh"
                    fresco:placeholderImageScaleType="centerCrop"
                    fresco:roundAsCircle="false"
                    fresco:failureImage="@drawable/icon_loadedfail"
                    fresco:failureImageScaleType="centerCrop"
                    fresco:progressBarImage="@drawable/icon_loading"
                    fresco:progressBarImageScaleType="centerCrop" />
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/simpleImage18"
                    android:layout_width="match_parent"
                    android:layout_height="200dip"
                    fresco:placeholderImage="@drawable/click_refresh"
                    fresco:placeholderImageScaleType="centerCrop"
                    fresco:roundAsCircle="false"
                    fresco:failureImage="@drawable/icon_loadedfail"
                    fresco:failureImageScaleType="centerCrop"
                    fresco:progressBarImage="@drawable/icon_loading"
                    fresco:progressBarImageScaleType="centerCrop" />
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/simpleImage19"
                    android:layout_width="match_parent"
                    android:layout_height="200dip"
                    fresco:placeholderImage="@drawable/click_refresh"
                    fresco:placeholderImageScaleType="centerCrop"
                    fresco:roundAsCircle="false"
                    fresco:failureImage="@drawable/icon_loadedfail"
                    fresco:failureImageScaleType="centerCrop"
                    fresco:progressBarImage="@drawable/icon_loading"
                    fresco:progressBarImageScaleType="centerCrop" />
                <com.facebook.drawee.view.SimpleDraweeView
                    android:id="@+id/simpleImage20"
                    android:layout_width="match_parent"
                    android:layout_height="200dip"
                    fresco:placeholderImage="@drawable/click_refresh"
                    fresco:placeholderImageScaleType="centerCrop"
                    fresco:roundAsCircle="false"
                    fresco:failureImage="@drawable/icon_loadedfail"
                    fresco:failureImageScaleType="centerCrop"
                    fresco:progressBarImage="@drawable/icon_loading"
                    fresco:progressBarImageScaleType="centerCrop" />
            </LinearLayout>
        </android.support.v4.widget.NestedScrollView>

    </LinearLayout>

</com.kuangjia.main.ui.widget.CustomerScrollView>