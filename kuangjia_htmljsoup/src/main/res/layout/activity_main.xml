<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
            xmlns:tools="http://schemas.android.com/tools"
            android:layout_width="match_parent"
            android:layout_height="match_parent" >
    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <TextView
            android:id="@+id/txt_show"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="1!" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorAccent"/>

        <TextView
            android:id="@+id/txt_api"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="2" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorAccent"/>

        <TextView
            android:id="@+id/txt_jsoup_html"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="3" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorAccent"/>

        <TextView
            android:id="@+id/txt_jsoup_url"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="4" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorAccent"/>

        <TextView
            android:id="@+id/txt_jsoup_body"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="5" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorAccent"/>

        <TextView
            android:id="@+id/txt_jsoup_wendang"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="6" />


        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorAccent"/>

        <TextView
            android:id="@+id/txt_jsoup_dom"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="7" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorAccent"/>

        <TextView
            android:id="@+id/txt_jsoup_urls"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="8" />

        <View
            android:layout_width="match_parent"
            android:layout_height="0.5dp"
            android:background="@color/colorAccent"/>

        <TextView
            android:id="@+id/txt_html"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="10" />

    </LinearLayout>


</ScrollView>